{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@connected-web/terrain-editor": ["packages/terrain/src/index.ts"],
      "@connected-web/terrain-editor/*": ["packages/terrain/src/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/dist/**", "website/**"]
}
