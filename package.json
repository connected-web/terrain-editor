{
  "name": "terrain-editor-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "An interactive terrain editor and viewer designed for web using three.js.",
  "main": "index.js",
  "scripts": {
    "build": "node ./scripts/build-dist.mjs",
    "build:editor": "npm --prefix editor run build",
    "build:lib": "npm --prefix packages/terrain run build",
    "build:viewer": "npm --prefix demos/viewer-ts run build",
    "validate:viewer": "node ./scripts/validate-viewer-package.mjs",
    "dev:editor": "npm --prefix editor run dev -- --host",
    "dev:viewer": "npm --prefix demos/viewer-ts run dev -- --host",
    "dev:website": "npm --prefix website run dev",
    "dev:all": "node ./scripts/dev-all.mjs",
    "packmap": "cd maps/wynnal && zip -r ../wynnal-terrain.wyn legend.json layers/ thumbnails/ locations.json theme.json",
    "preview:dist": "npm run build && node ./scripts/serve-dist.mjs",
    "test": "npm run test:smoke && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:smoke": "node ./scripts/smoke-tests.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connected-web/terrain-editor.git"
  },
  "keywords": [],
  "author": "Connected Web",
  "license": "ISC",
  "type": "commonjs",
  "workspaces": [
    "packages/*",
    "demos/*",
    "editor",
    "website"
  ],
  "bugs": {
    "url": "https://github.com/connected-web/terrain-editor/issues"
  },
  "homepage": "https://github.com/connected-web/terrain-editor#readme",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "basic-ftp": "^5.0.5",
    "http-server": "^14.1.1",
    "playwright": "^1.56.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
